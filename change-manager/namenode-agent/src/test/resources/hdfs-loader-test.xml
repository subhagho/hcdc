<configuration>
    <loader>
        <baseDir>/test/hcdc/loader/avro</baseDir>
        <env>DEV</env>
        <connections>
            <path>config</path>
            <use>source-hdfs-ha</use>
        </connections>
    </loader>
    <config>
        <connections>
            <shared>
                <connection>zk-state-connection</connection>
                <path>/ai/sapper/cdc/registry</path>
            </shared>
            <connection>
                <type>ai.sapper.cdc.core.connections.ZookeeperConnection</type>
                <zookeeper>
                    <name>zk-state-connection</name>
                    <!--connectionString>192.168.0.5:2181,192.168.0.4:2181</connectionString -->
                    <connectionString>192.168.2.16:2181,192.168.2.17:2181,192.168.2.18:2181</connectionString>
                    <retry>
                        <interval>1500</interval>
                        <retries>5</retries>
                    </retry>
                    <connectionTimeout>10000</connectionTimeout>
                </zookeeper>
            </connection>
        </connections>
    </config>
</configuration>