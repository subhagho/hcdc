<?xml version="1.0" encoding="ISO-8859-1" ?>
<configuration>
    <env>
        <name>DEV</name>
        <module>EDITS-LOG-PROCESSORS</module>
        <instance>NameNodeReplicator</instance>
        <source>ha-cluster</source>
        <paths>
            <connections>config</connections>
        </paths>
        <managers>
            <state>
                <stateManagerClass>ai.sapper.hcdc.agents.common.ZkStateManager</stateManagerClass>
                <basePath>/ai/sapper/cdc/edits</basePath>
                <connection>zk-state-connection</connection>
            </state>
        </managers>
        <audit>
            <class>ai.sapper.cdc.common.audit.DefaultAuditLogger</class>
        </audit>
        <agent>
            <hadoop>
                <namespace>ha-cluster</namespace>
                <instance>nn1</instance>
                <home>/opt/hadoop/hadoop</home>
                <!--adminUrl>localhost:9870</adminUrl-->
                <config>src/test/resources/configs/hdfs-site.xml</config>
                <hdfs-admin>source-hdfs-ha</hdfs-admin>
            </hadoop>
            <needHadoop>true</needHadoop>

            <useSSL>false</useSSL>
        </agent>
        <replicator>
            <connections>
                <hdfs>source-hdfs-ha</hdfs>
            </connections>
        </replicator>
        <locks>
            <connection>zk-state-connection</connection>
            <path>/ai/sapper/cdc/registry</path>
        </locks>
        <config>
            <connections>
                <shared>
                    <connection>zk-state-connection</connection>
                    <path>/ai/sapper/cdc/registry</path>
                </shared>
                <connection>
                    <type>ai.sapper.cdc.core.connections.ZookeeperConnection</type>
                    <zookeeper>
                        <name>zk-state-connection</name>
                        <!--connectionString>192.168.0.5:2181,192.168.0.4:2181</connectionString -->
                        <connectionString>192.168.2.16:2181,192.168.2.17:2181,192.168.2.18:2181</connectionString>
                        <retry>
                            <interval>1500</interval>
                            <retries>5</retries>
                        </retry>
                        <connectionTimeout>10000</connectionTimeout>
                    </zookeeper>
                </connection>
            </connections>
        </config>
    </env>
</configuration>