<?xml version="1.0" encoding="ISO-8859-1" ?>
<configuration>
    <env>
        <name>DEV</name>
        <module>hadoop</module>
        <instance>SnapshotService</instance>
        <source>ha-cluster</source>
        <enableHeartbeat>true</enableHeartbeat>
        <paths>
            <connections>config</connections>
        </paths>
        <managers>
            <state>
                <stateManagerClass>ai.sapper.cdc.core.state.HCdcStateManager</stateManagerClass>
                <basePath>/ai/sapper/cdc/edits</basePath>
                <connection>zk-state-connection</connection>
            </state>
            <schema>
                <name>HDFSSchemaManager</name>
                <persistence>
                    <handler>
                        <class>ai.sapper.cdc.entity.manager.zk.ZKSchemaDataHandler</class>
                        <settings>ai.sapper.cdc.entity.manager.zk.ZKSchemaDataHandlerSettings</settings>
                    </handler>
                    <basePath>/ai/sapper/cdc/registry</basePath>
                    <connection>zk-state-connection</connection>
                    <schema>hdfs</schema>
                </persistence>
                <hdfs>source-hdfs-ha</hdfs>
            </schema>
        </managers>
        <audit>
            <class>ai.sapper.cdc.common.audit.DefaultAuditLogger</class>
        </audit>
        <agent>
            <needHadoop>false</needHadoop>
            <useSSL>false</useSSL>
            <processor>
                <snapshot>
                    <name>SnapshotRunner</name>
                    <type>ai.sapper.hcdc.agents.namenode.HDFSSnapshotProcessor</type>
                    <sender>
                        <builder>
                            <type>ai.sapper.cdc.core.messaging.HCDCSenderBuilder</type>
                            <settingsType>ai.sapper.cdc.core.messaging.kafka.builders.KafkaProducerSettings</settingsType>
                        </builder>
                        <type>kafka</type>
                        <connection>producer-cdc-queue</connection>
                        <!--partitioner></partitioner-->
                    </sender>
                    <admin>
                        <builder>
                            <type>ai.sapper.cdc.core.messaging.HCDCSenderBuilder</type>
                            <settingsType>ai.sapper.cdc.core.messaging.kafka.builders.KafkaProducerSettings</settingsType>
                        </builder>
                        <type>kafka</type>
                        <connection>producer-edits-queue</connection>
                        <!--partitioner></partitioner-->
                    </admin>
                    <readBatchTimeout>5000</readBatchTimeout>
                </snapshot>
            </processor>
        </agent>
        <locks>
            <connection>zk-state-connection</connection>
            <path>/ai/sapper/cdc/registry</path>
        </locks>
        <config>
            <connections>
                <shared>
                    <connection>zk-state-connection</connection>
                    <path>/ai/sapper/cdc/registry</path>
                </shared>
                <connection>
                    <class>ai.sapper.cdc.core.connections.ZookeeperConnection</class>
                    <zookeeper>
                        <name>zk-state-connection</name>
                        <!--connectionString>192.168.0.5:2181,192.168.0.4:2181</connectionString -->
                        <connectionString>192.168.2.16:2181,192.168.2.17:2181,192.168.2.18:2181</connectionString>
                        <retry>
                            <interval>1500</interval>
                            <retries>5</retries>
                        </retry>
                        <connectionTimeout>10000</connectionTimeout>
                    </zookeeper>
                </connection>
            </connections>
        </config>
    </env>
</configuration>