<?xml version="1.0" encoding="ISO-8859-1" ?>
<configuration>
    <env>
        <name>DEV</name>
        <module>CDC-PROCESSORS</module>
        <instance>EntityChangeDeltaReader/0</instance>
        <source>ha-cluster</source>
        <enableHeartbeat>true</enableHeartbeat>
        <paths>
            <connections>config</connections>
        </paths>
        <managers>
            <state>
                <stateManagerClass>ai.sapper.hcdc.agents.common.ProcessorStateManager</stateManagerClass>
                <basePath>/ai/sapper/cdc/processors</basePath>
                <connection>zk-state-connection</connection>
            </state>
            <domain>
                <basePath>/ai/sapper/cdc/registry</basePath>
                <connection>zk-state-connection</connection>
                <module>hdfs</module>
            </domain>
            <schema>
                <basePath>/ai/sapper/cdc/registry</basePath>
                <connection>zk-state-connection</connection>
                <schema>output</schema>
            </schema>
        </managers>
        <agent>
            <needHadoop>false</needHadoop>
            <processor>
                <files>
                    <filesystem>
                        <type>ai.sapper.cdc.core.io.impl.local.LocalFileSystem</type>
                        <root>/home/subhagho/work/temp/data/hcdc</root>
                        <!--root>/hcdc/replication/</root>
                        <region>US_WEST_2</region>
                        <defaultBucket>hcdc</defaultBucket-->
                    </filesystem>
                    <hdfs>source-hdfs-ha</hdfs>
                    <sender>
                        <connectionType>kafka</connectionType>
                        <connection>producer-delta-files-queue</connection>
                        <!--partitioner>
                            <type>ai.sapper.cdc.core.messaging.ChangeDeltaKafkaPartitioner</type>
                            <config>
                                <partitions>3</partitions>
                            </config>
                        </partitioner-->
                    </sender>
                    <receiver>
                        <connectionType>kafka</connectionType>
                        <connection>consumer-delta-queue</connection>
                        <!--partitioner></partitioner-->
                    </receiver>
                    <errorQueue>
                        <connectionType>kafka</connectionType>
                        <connection>producer-errors-files-queue</connection>
                        <!--partitioner></partitioner-->
                    </errorQueue>
                    <readBatchTimeout>5000</readBatchTimeout>
                    <snapshot>
                        <client>
                            <name>snapshot</name>
                            <connection>snapshot</connection>
                            <paths>
                                <snapshotDone>/done</snapshotDone>
                            </paths>
                            <retryCount>2</retryCount>
                        </client>
                    </snapshot>
                </files>
            </processor>
            <useSSL>false</useSSL>
            <audit>
                <class>ai.sapper.cdc.common.audit.DefaultAuditLogger</class>
            </audit>
        </agent>
        <locks>
            <connection>zk-state-connection</connection>
            <path>/ai/sapper/cdc/registry</path>
            <lock>
                <name>EntityChangeDeltaReader/0</name>
                <lock-node>EntityChangeDeltaReader/0/__lock</lock-node>
            </lock>
        </locks>
        <config>
            <connections>
                <shared>
                    <connection>zk-state-connection</connection>
                    <path>/ai/sapper/cdc/registry</path>
                </shared>
                <connection>
                    <type>ai.sapper.cdc.core.connections.ZookeeperConnection</type>
                    <zookeeper>
                        <name>zk-state-connection</name>
                        <!--connectionString>192.168.0.5:2181,192.168.0.4:2181</connectionString -->
                        <connectionString>192.168.2.16:2181,192.168.2.17:2181,192.168.2.18:2181</connectionString>
                        <retry>
                            <interval>1500</interval>
                            <retries>5</retries>
                        </retry>
                        <connectionTimeout>10000</connectionTimeout>
                    </zookeeper>
                </connection>
            </connections>
        </config>
    </env>
</configuration>